<h1>This is the 'edit' view for the posts controller</h1>
<%= form_for @post do |f| %>
<p>
	<%= f.label :title %><br />
	<%= f.text_field :title %><br />
	</p>

<p>
	<%= f.label :body %><br />
	<%= f.text_area :body %><br />
	</p>

<p>
	<%= f.select :catagory_id, Catagory.all.collect {|x| [x.name, x.id] }, {:include_blank => "Select one"} %><br />
	<br />
	</p>

<p>
	<%= f.submit "Update post" %><br />

	</p>

<%end%>

<%= link_to "Go back to home",posts_path %> 